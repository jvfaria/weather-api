{
  "branches": [
    "main",
    { "name": "release/*", "prerelease": "rc" },
    { "name": "develop",   "prerelease": "dev" }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],
    ["@semantic-release/exec", { "prepareCmd": "mvn -B versions:set -DnewVersion=${nextRelease.version} && mvn -B versions:commit" }],
    ["@semantic-release/git", { "assets": ["pom.xml", "CHANGELOG.md"] }],
    ["@semantic-release/github", { "assets": [{ "path": "target/*.jar", "label": "JAR" }] }]
  ]
}